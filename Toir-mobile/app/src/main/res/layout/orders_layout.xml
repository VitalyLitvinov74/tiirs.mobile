<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tl_global_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tl_Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:background="@color/larisaBlueColor"
            android:gravity="center_vertical"
            android:paddingStart="5dip"
            android:text="@string/description"
            android:textColor="@color/larisaWhiteColor"
            android:textSize="16sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/tl_listview_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="60dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#333333"
                android:dividerHeight="1px"
                android:scrollbarAlwaysDrawVerticalTrack="true"/>

        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_defect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="210dp"
        android:src="@android:drawable/ic_dialog_alert"
        app:backgroundTint="@color/md_red_A700"
        app:fabSize="normal" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="145dp"
        android:src="@drawable/cameraicon"
        app:backgroundTint="@color/larisaBlueColor"
        app:fabSize="normal" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_equipmentInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="80dp"
        android:src="@drawable/ic_info"
        app:backgroundTint="@color/larisaBlueColor"
        app:fabSize="normal" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="60dp"
        android:src="@drawable/check_box"
        app:backgroundTint="@color/larisaBlueColor"
        android:layout_marginEnd="15dp"
        app:fabSize="normal" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="80dp"
        android:src="@android:drawable/ic_menu_help"
        app:backgroundTint="@color/larisaBlueColor"
        app:fabSize="normal" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewOperation"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="275dp"
        android:src="@color/colorPrimary"
        android:visibility="gone" />
</android.support.design.widget.CoordinatorLayout>