            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/eril_last_operation_date_label"
            android:layout_toEndOf="@+id/eril_last_operation_date_label"
            android:layout_marginStart="5dp" />
    -->

    <TextView
        android:id="@+id/eril_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eril_inventory_number"
        android:textColor="#454545"
        android:textSize="14sp"
        android:maxLines="1"
        android:layout_marginBottom="5dp"
        android:paddingBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/eril_image" />

    <TextView
        android:id="@+id/eril_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eril_image"
        android:background="#ff0000"
        android:textColor="#eeeeee"
        android:textSize="14sp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/eril_serial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eril_image"
        android:textColor="#222222"
        android:textSize="14sp"
        android:layout_marginBottom="5dp"
        android:paddingBottom="5dp"
        android:layout_toEndOf="@+id/eril_status"
        android:text="@string/serial_number" />


</RelativeLayout>