<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/eril_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/status"
        android:src="@drawable/no_image"
        android:layout_marginStart="5dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/eril_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:maxLines="1"
        android:textColor="#222222"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/eril_image" />

    <TextView
        android:id="@+id/eril_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eril_title"
        android:textColor="#222222"
        android:textSize="14sp"
        android:text="@string/type"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/eril_image" />

    <TextView
        android:id="@+id/eril_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#454545"
        android:textSize="14sp"
        android:maxLines="1"
        android:layout_below="@+id/eril_title"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/eril_type_label" />

    <TextView
        android:id="@+id/eril_inventory_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#454545"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:layout_below="@+id/eril_type_label"
        android:layout_toEndOf="@+id/eril_image"
        android:layout_marginStart="5dp" />

