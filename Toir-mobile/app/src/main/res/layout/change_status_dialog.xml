<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/current_status_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/current_status"
        style="@android:style/Widget.Holo.Light.TextView"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/larisaBlueColor" />

    <TextView
        android:id="@+id/current_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/current_status_label"
        style="@android:style/Widget.Holo.Light.TextView"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/larisaTextColor" />

    <TextView
        android:id="@+id/change_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/current_status"
        android:text="@string/new_status"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/larisaBlueColor" />

    <Spinner
        android:id="@+id/spinner_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        style="@android:style/Widget.Holo.Light.Spinner"
        android:layout_below="@+id/change_status" />

</RelativeLayout>
