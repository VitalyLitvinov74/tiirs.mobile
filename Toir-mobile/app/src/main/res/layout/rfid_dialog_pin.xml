<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@color/larisaTextColorAWhite">

    <TextView
        android:id="@+id/rfid_dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:paddingBottom="20dp"
        android:text="@string/input_login_pin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/larisaTextColor"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/rfid_dialog_spinner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rfid_dialog_text"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/login_input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/rfid_dialog_pin_login_input"
            android:text="@string/login_title" />

        <RelativeLayout
            android:id="@+id/rfid_dialog_pin_spinner_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_input_title"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <Spinner
                android:id="@+id/rfid_dialog_pin_login_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:background="@drawable/back_spinner"
                android:gravity="center"
                android:paddingEnd="5dp"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_drop" />
        </RelativeLayout>

        <EditText
            android:id="@+id/rfid_dialog_pin_login_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_below="@id/rfid_dialog_pin_spinner_layout"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:background="@drawable/back_spinner"
            android:gravity="center"
            android:inputType="text"
            android:paddingEnd="5dp"
            android:text="" />

        <TextView
            android:id="@+id/pin_input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rfid_dialog_pin_login_input"
            android:labelFor="@id/rfid_dialog_pin_pin_input"
            android:text="@string/pin_title" />

        <EditText
            android:id="@+id/rfid_dialog_pin_pin_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_below="@id/pin_input_title"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:background="@drawable/back_spinner"
            android:gravity="center"
            android:inputType="numberPassword"
            android:paddingEnd="5dp"
            android:text="" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rfid_dialog_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rfid_dialog_spinner_layout"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/rfid_dialog_text_button_CANCEL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:height="35dp"
            android:background="@color/larisaBackColor"
            android:minHeight="0dp"
            android:text="@string/cancel"
            android:textColor="@color/larisaTextColorAWhite" />

        <TextView
            android:id="@+id/rfid_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text=""
            android:textSize="18sp" />

        <Button
            android:id="@+id/rfid_dialog_text_button_OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:height="35dp"
            android:background="@color/larisaBackColor"
            android:minHeight="0dp"
            android:text="@string/ok"
            android:textColor="@color/larisaTextColorAWhite" />

    </LinearLayout>

</RelativeLayout>
