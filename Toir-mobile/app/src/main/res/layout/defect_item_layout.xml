<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/defect_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/description"
        android:src="@drawable/no_image" />

    <TextView
        android:id="@+id/defect_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:textColor="#222222"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/defect_image"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/defect_equipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/defect_title"
        android:layout_marginStart="5dp"
        android:textColor="#222222"
        android:textSize="14sp"
        android:layout_toEndOf="@+id/defect_image" />

    <ImageView
        android:id="@+id/defect_status_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/defect_equipment"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/defect_image"
        android:contentDescription="@string/description"
        android:src="@drawable/status_high_receive" />

    <TextView
        android:id="@+id/defect_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/defect_equipment"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/defect_status_image"
        android:textColor="#454545"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/defect_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#454545"
        android:textSize="14sp"
        android:layout_below="@+id/defect_status"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/defect_image" />

</RelativeLayout>